<h1>Liste des Risebox</h1>
<table border="1">
	<tr>
		<th>Nom</th>
		<th>Propriétaire</th>
		<th>Connectée ?</th>
		<th>&nbsp;</th>
	</tr>
	<% @devices.each do |device| %>
		<% last_call = device.measures.last.try(:taken_at) %>
		<tr>
			<td><%= device.name %></td>
			<td><%= device.owner.first_name %> <%= device.owner.last_name %></td>
			<td><span style="background-color: <%= (last_call && last_call > 5.minutes.ago) ? 'green' : 'red' %>">&nbsp;&nbsp;&nbsp;</span></td>
			<td><%= link_to 'Voir', demo_device_path(device_key: device.key) %></td>
		</tr>
	<% end %>
</table>
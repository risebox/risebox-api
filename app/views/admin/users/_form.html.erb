<%# f.error_messages %>

<div class="form-group">
  <%= f.label      :type, class: 'col-sm-2 control-label' %>
  <div class="col-sm-10 ">
    <div class="btn-group" role="group" aria-label="user-type" data-toggle="buttons">
      <label class="btn btn-default <%='active' if f.object.human? %>">
        <%= f.radio_button :human, true, autocomplete: :off %> User
      </label>
      <label class="btn btn-default <%='active' if !f.object.human? %>">
        <%= f.radio_button :human, false, autocomplete: :off %> Brain
      </label>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label      :first_name, class: 'col-sm-2 control-label' %>
  <div class="col-sm-10 ">
      <%= f.text_field(:first_name, class: 'form-control', placeholder: 'First Name') %>
  </div>
</div>

<div class="form-group">
  <%= f.label      :last_name, class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field(:last_name, class: 'form-control', placeholder: 'Last Name') %>
  </div>
</div>

<div class="form-group">
  <%= f.label      :email, class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.email_field(:email, class: 'form-control', placeholder: 'Email') %>
  </div>
</div>

<div class="form-group">
  <%= f.label      :password, class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.password_field(:password, class: 'form-control', placeholder: 'Password') %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-2">&nbsp;</div>
  <div class="col-sm-10">
    <%= f.password_field(:password_confirmation, class: 'form-control', placeholder: 'Type your password again') %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit btn_text, class: 'btn btn-success' %>
    &nbsp;
    <%= link_to "Cancel", :back %>
  </div>
</div>